{
  "expo": {
    "name": "Viva Mais",
    "slug": "viva-mais",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash.png",
          "resizeMode": "cover"
        }
      ],
      [
        "expo-asset",
        {
          "assets": [
            "./assets/images/welcome-bg.png",
            "./assets/images/viva-mais-logo.png"
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
